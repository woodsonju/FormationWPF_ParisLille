<Window x:Class="WPF1Window.Fichier.OpenFileDialogTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1Window.Fichier"
        mc:Ignorable="d"
        Title="OpenFileDialogTest" Height="450" Width="800">
    <Grid>
        <TextBox Height="43" Width="436" Text="TextBox" Name="FileNameTextBox" TextWrapping="Wrap" 
                 VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,10"/>
        <Button x:Name="BrowseButton" Content="Browse a file" Width="121" Height="40" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="470,10,10,10" Click="BrowseButton_Click"/>
        
        <TextBlock Height="282" Width="760" Name="TextBlock1" Text="TextBlock" TextWrapping="Wrap"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,10,10"/>
    </Grid>
</Window>
